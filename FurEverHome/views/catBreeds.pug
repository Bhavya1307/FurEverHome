extends layout

block pageStyles
  link(rel="stylesheet", type="text/css", href="catBreeds.css")
  link(rel="stylesheet", type="text/css", href="common.css")

block main-content
  h1 Some Exciting Cat Breeds Information!
  if catError
    p.error= catError
  else if catBreeds && catBreeds.length > 0
    .breed-list
      each breed in catBreeds
        .breed-card
          h3= breed.name
          if breed.image && breed.image.url
            img(src=breed.image.url, alt=`${breed.name} Image`)
          p 
            strong Temperament: 
            | #{breed.temperament || 'Not specified'}
          p 
            strong Origin: 
            | #{breed.origin || 'Not specified'}
          p 
            strong Life Span: 
            | #{breed.life_span || 'Not specified'}
          p 
            strong Weight: 
            | #{breed.weight && breed.weight.metric ? breed.weight.metric + ' kg' : 'Not specified'}
          p 
            strong Origin: 
            | #{breed.origin || 'Not specified'}
  else
    p No cat breeds available.